[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab

[*.{md,markdown}]
# Markdown has sensible whitespace
trim_trailing_whitespace = false

[*.{js,ts,tsx,py,rs}]
tab_width = 4

[*.go]
indent_style = tab
tab_width = 8
